<Page x:Class="KhabibullinTRiZBD.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KhabibullinTRiZBD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="500"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="ID" FontSize="16" Height="20" MinWidth="120" Width="auto" Margin="5"></TextBlock>
            <TextBox Text="{Binding Kod_prepod}" FontSize="15" Height="20" Width="400" Name="IDTB"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal">
            <TextBlock Text="Имя" FontSize="16" Height="20" MinWidth="120" Width="auto" Margin="5"></TextBlock>
            <TextBox Text="{Binding Firstname}" FontSize="15" Height="20" Width="400"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal">
            <TextBlock Text="Фамилия" FontSize="15" Height="20" MinWidth="120" Width="auto" Margin="5"></TextBlock>
            <TextBox Text="{Binding Lastname}" FontSize="15" Height="20" Width="500"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal">
            <TextBlock Text="Отчество" FontSize="15" Height="20" MinWidth="120" Width="auto" Margin="5"></TextBlock>
            <TextBox Text="{Binding Patronymic}" FontSize="15" Height="20" Width="400"></TextBox>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="4" Orientation="Vertical" Grid.RowSpan="5">
            <TextBlock Text="Фото" FontSize="15" Height="20" Width="auto" Margin="5"></TextBlock>
            <Image Name="LogoImage" Stretch="UniformToFill" MinHeight="100" Height="220" Width="300" HorizontalAlignment="Center">
                <Image.Source>
                    <Binding Path="Photo" TargetNullValue="Teachers\picture.png"></Binding>
                </Image.Source>
            </Image>
            <Button Content="Изменить фото" Name="ChangePictureBtn" Click="ChangePictureBtn_Click"></Button>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Должность" FontSize="15" Height="20" Width="140" Margin="5"></TextBlock>
            <ComboBox FontSize="15" Height="25" Width="300" Name="ComboType" Text="{Binding Dolzhnost}">
                <ComboBoxItem Content="Ассистент"/>
                <ComboBoxItem Content="Старший преподаватель"/>
                <ComboBoxItem Content="Профессор"/>
                <ComboBoxItem Content="Доцент"/>
            </ComboBox>
        </StackPanel>
        
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
            <TextBlock Text="Название кафедры" FontSize="15" Height="20" Width="140" Margin="5"></TextBlock>
            <ComboBox Name="PickupCombo" Grid.Column="1" Grid.Row="5" Width="300" Height="25" HorizontalAlignment="Left"></ComboBox>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal">
            <TextBlock Text="Дата рождения" FontSize="15" Height="20" Width="140" Margin="5"></TextBlock>
            <DatePicker Name="dtPicker" IsTodayHighlighted="True" SelectedDateChanged="dtPicker_SelectedDateChanged"  FontSize="15" Height="30" Width="300"></DatePicker>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal">
            <TextBlock Text="Год поступления" FontSize="15" Height="20" Width="140" Margin="5"></TextBlock>
            <TextBox Text="{Binding God_post}" FontSize="15" Height="20" Width="100" TextChanged="TextBox_TextChanged" Name="TBGodPost"></TextBox>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal">
            <TextBlock Text="Стаж" FontSize="15" Height="20" Width="140" Margin="5"></TextBlock>
            <TextBox Text="{Binding Stazh}" FontSize="15" Height="20" Width="200" Name="TBStazh"></TextBox>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="5" Orientation="Horizontal">
            <Button Content="Сохранить" Name="SaveBtn" Click="SaveBtn_Click"  Margin="5"></Button>
            <Button Content="Удалить" Name="DeleteBtn" Click="DeleteBtn_Click" Margin="5" Opacity="{Binding ID}"></Button>
        </StackPanel>
    </Grid>
</Page>
