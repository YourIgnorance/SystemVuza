<Page x:Class="KhabibullinTRiZBD.TeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KhabibullinTRiZBD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherPage">

    <Grid IsVisibleChanged="AgentsListView_IsVisibleChanged">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>

        </Grid.RowDefinitions>
        
        <WrapPanel Orientation="Horizontal">

            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock Text="Поиск" TextAlignment="Center" Width="100" FontSize="20"></TextBlock>
                <TextBox Name="TBoxSearch" TextChanged="TBoxSearch_TextChanged"  Width="300" FontSize="15"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="7">
                <TextBlock Text="Сортировка" TextAlignment="Center" Width="130" FontSize="20"></TextBlock>
                <ComboBox Name="SortComboBox" SelectionChanged="SortComboBox_SelectionChanged" FontSize="15" Width="300" HorizontalContentAlignment="Center">
                    <TextBlock> Сортировка</TextBlock>
                    <TextBlock> по фио (по возврастанию)</TextBlock>
                    <TextBlock> по фио (по убыванию)</TextBlock>
                    <TextBlock> по стажу (по возврастанию)</TextBlock>
                    <TextBlock> по стажу (по убыванию)</TextBlock>
                    <TextBlock> по году рождения (по возврастанию)</TextBlock>
                    <TextBlock> по году рождения (по убыванию)</TextBlock>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="7">
                <TextBlock Text="Фильтрация" TextAlignment="Center" Width="130" FontSize="20"></TextBlock>
                <ComboBox Name="FiltrComboBox" SelectionChanged="FiltrComboBox_SelectionChanged" FontSize="15" Width="220" HorizontalContentAlignment="Center">
                    <TextBlock> Все</TextBlock>
                    <TextBlock> Ассистент</TextBlock>
                    <TextBlock> Старший преподаватель</TextBlock>
                    <TextBlock> Профессор</TextBlock>
                    <TextBlock> Доцент</TextBlock>
                </ComboBox>
            </StackPanel>
        </WrapPanel>
        <Button Content="Добавить преподавателя" Name="AddButton" Click="AddButton_Click" Width="300" Height="35" HorizontalAlignment="Right"></Button>
        
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="3">
            <TextBlock Text="кол-во записей: " FontSize="30"></TextBlock>
            <TextBlock Name="TBlockCount" FontSize="30"></TextBlock>
            <TextBlock Text="/" FontSize="30"></TextBlock>
            <TextBlock Name="TBlockAllCount" FontSize="30"></TextBlock>
        </StackPanel>
        <ListView Name="AgentsListView" Grid.Row="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="{Binding FonStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="1250"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Width="400" Height="300" Grid.Column="0" Grid.RowSpan="6" Stretch="UniformToFill" HorizontalAlignment="Left">
                            <Image.Source>
                                <Binding Path="Photo">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            \Teachers\picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" Margin="5">
                            <TextBlock Text="{Binding Dolzhnost}" HorizontalAlignment="Left" FontSize="24"></TextBlock>
                            <TextBlock Text="{Binding GetFIO, StringFormat={} | {0}}" HorizontalAlignment="Left" FontSize="24"></TextBlock>
                        </StackPanel>
                        <TextBlock Text="{Binding Stazh, StringFormat={} Стаж: {0}}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" FontSize="24"></TextBlock>
                        
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" Margin="5">
                            <TextBlock Text="Название кафедры: " HorizontalAlignment="Left" FontSize="24"></TextBlock>
                            <TextBlock Text="{Binding GetKafedra}" HorizontalAlignment="Left" FontSize="24"></TextBlock>
                        </StackPanel>

                        <TextBlock Text="{Binding GetNumKorpus, StringFormat={} Адрес кафедры: {0}}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" FontSize="24"></TextBlock>
                        <TextBlock Text="{Binding GetDateBirth, StringFormat={} Дата рождения: {0}}" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" FontSize="24"></TextBlock>
                        <TextBlock Text="{Binding God_post, StringFormat={} Год поступления: {0}}" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" FontSize="24"></TextBlock>

                        <Button Content="Редактировать" Name="EditButton" Click="EditButton_Click" Grid.Row="4" Grid.Column="1" Grid.RowSpan="6" VerticalAlignment="Bottom"  HorizontalAlignment="Right" Width="300" Height="35"></Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
